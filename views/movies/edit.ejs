<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Movie <%=result.title %> Edit</title>
    </head>
    <body>
        <h2>Update movie</h2>
        <form action="/movies/<%=result._id%>?_method=PUT" method="POST">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%=result.title%>"> <br />
    
            <label for="poster">Poster</label>
            <input type="text" name="poster" value="<%=result.poster%>"> <br>
    
            <label for="genre">Genre</label>
            <select name="genre">
                <option value="Cartoon">Cartoon</option>
                <option value="Comedy">Comedy</option>
                <option value="Action">Action</option>
            </select>
            <br >
            <label for="duration">Duration</label>
            <input type="text" name="duration" value="<%=result.duration%>"> <br>
    
            <input type="submit" value="Update">
            <input type="reset" value="Reset">
        </form>
        <form action="/movies/<%=result._id%>?_method=DELETE" method="POST" style="display: inline">
            <input type="submit" value="DELETE">
        </form>
    </body>
    </html>